<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/main_background"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".MainActivity">
	
	<ImageView
		android:id="@+id/main_background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/color_background" />
	
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="16dp">
		<TextView
			android:id="@+id/main_last_build"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="24sp"
			android:textColor="@color/white"
			android:fontFamily="@font/notosans_bold"
			android:includeFontPadding="false"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_marginRight="8dp"
			app:layout_constraintBottom_toTopOf="@id/main_news"
			android:layout_marginBottom="12dp" />
		
		<android.support.constraint.ConstraintLayout
			android:id="@+id/main_news"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			app:layout_constraintTop_toBottomOf="@id/main_list_button"
			android:layout_marginTop="36dp"
			app:layout_constraintBottom_toBottomOf="parent" >

			<android.support.constraint.ConstraintLayout
				android:id="@+id/news_1"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:background="@drawable/layout_rounding"
				app:layout_constraintVertical_chainStyle="spread_inside"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toTopOf="@id/news_2"
				android:paddingLeft="16dp"
				android:paddingRight="16dp" >
				<TextView
					android:id="@+id/news_1_index"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/news_1"
					android:textSize="40sp"
					android:textColor="@color/main_color"
					android:fontFamily="@font/notosans_bold"
					android:includeFontPadding="false"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"/>
				<TextView
					android:id="@+id/news_1_title"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:text="@string/main_not_ready"
					android:textSize="28sp"
					android:textAlignment="center"
					android:gravity="center"
					android:fontFamily="@font/notosans_regular"
					android:includeFontPadding="false"
					android:lines="3"
					android:ellipsize="end"
					app:layout_constraintLeft_toRightOf="@id/news_1_index"
					android:layout_marginLeft="12dp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent" />
			</android.support.constraint.ConstraintLayout>
			
			<android.support.constraint.ConstraintLayout
				android:id="@+id/news_2"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:background="@drawable/layout_rounding"
				app:layout_constraintTop_toBottomOf="@id/news_1"
				android:layout_marginTop="16dp"
				app:layout_constraintBottom_toTopOf="@id/news_3"
				android:paddingLeft="16dp"
				android:paddingRight="16dp" >
				<TextView
					android:id="@+id/news_2_index"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/news_2"
					android:textSize="40sp"
					android:textColor="@color/main_color"
					android:fontFamily="@font/notosans_bold"
					android:includeFontPadding="false"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent" />
				<TextView
					android:id="@+id/news_2_title"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:text="@string/main_not_ready"
					android:textSize="28sp"
					android:textAlignment="center"
					android:gravity="center"
					android:fontFamily="@font/notosans_regular"
					android:includeFontPadding="false"
					android:lines="3"
					android:ellipsize="end"
					app:layout_constraintLeft_toRightOf="@id/news_2_index"
					android:layout_marginLeft="12dp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent" />
			</android.support.constraint.ConstraintLayout>
			
			<android.support.constraint.ConstraintLayout
				android:id="@+id/news_3"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:background="@drawable/layout_rounding"
				app:layout_constraintTop_toBottomOf="@id/news_2"
				android:layout_marginTop="16dp"
				app:layout_constraintBottom_toBottomOf="parent"
				android:paddingLeft="16dp"
				android:paddingRight="16dp" >
				<TextView
					android:id="@+id/news_3_index"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/news_3"
					android:textSize="40sp"
					android:textColor="@color/main_color"
					android:fontFamily="@font/notosans_bold"
					android:includeFontPadding="false"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"/>
				<TextView
					android:id="@+id/news_3_title"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:text="@string/main_not_ready"
					android:textSize="28sp"
					android:textAlignment="center"
					android:gravity="center"
					android:fontFamily="@font/notosans_regular"
					android:includeFontPadding="false"
					android:lines="3"
					android:ellipsize="end"
					app:layout_constraintLeft_toRightOf="@id/news_3_index"
					android:layout_marginLeft="12dp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent" />
			</android.support.constraint.ConstraintLayout>
		</android.support.constraint.ConstraintLayout>
		<ImageButton
			android:id="@+id/main_list_button"
			android:layout_width="28dp"
			android:layout_height="28dp"
			android:src="@drawable/list_button"
			android:scaleType="fitXY"
			android:background="@color/button_transparent"
			android:visibility="invisible"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="25dp"
			app:layout_constraintLeft_toLeftOf="parent"/>
	</android.support.constraint.ConstraintLayout>
	<android.support.constraint.ConstraintLayout
		android:id="@+id/mic_speaking_background_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/transparent">
		<ImageView
			android:id="@+id/mic_speaking_main"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/mic_speaking_purple"
			android:visibility="invisible"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>
	</android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
