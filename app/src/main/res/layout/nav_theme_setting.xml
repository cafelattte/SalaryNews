<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@color/home_background"
	android:layout_marginTop="24dp">

	<android.support.constraint.ConstraintLayout
		android:id="@+id/nav_theme_title"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:background="@color/main_background">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/nav_theme"
			android:textSize="20sp"
			android:textAlignment="center"
			android:textColor="@color/black"
			android:fontFamily="@font/notosans_medium"
			android:includeFontPadding="false"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"/>
		<ImageView
			android:id="@+id/nav_theme_setting_backButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/content_backward"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginLeft="24dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>
	</android.support.constraint.ConstraintLayout>
	<android.support.constraint.ConstraintLayout
		android:id="@+id/nav_theme_border1"
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:background="#33000000"
		app:layout_constraintTop_toBottomOf="@id/nav_theme_title" />
	<android.support.constraint.ConstraintLayout
		android:id="@+id/nav_theme_image"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		app:layout_constraintTop_toBottomOf="@id/nav_theme_border1"
		android:layout_marginTop="20dp">
		<ImageView
			android:id="@+id/nav_theme_setting_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/start_person_purple"
			android:adjustViewBounds="true"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent" />
	</android.support.constraint.ConstraintLayout>
	<android.support.constraint.ConstraintLayout
		android:id="@+id/nav_theme_border2"
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:background="#33000000"
		app:layout_constraintTop_toBottomOf="@id/nav_theme_image" />
	<android.support.constraint.ConstraintLayout
		android:id="@+id/nav_theme_list"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/nav_theme_border2">
		<android.support.constraint.ConstraintLayout
			android:id="@+id/nav_theme_purple"
			android:layout_width="match_parent"
			android:layout_height="64dp"
			android:paddingHorizontal="16dp"
			app:layout_constraintTop_toTopOf="parent">
			<ImageView
				android:id="@+id/nav_theme_purple_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/nav_theme_purple_icon"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="parent" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/nav_theme_purple"
				android:textSize="20sp"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:fontFamily="@font/notosans_regular"
				android:includeFontPadding="false"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toRightOf="@id/nav_theme_purple_icon"
				android:layout_marginLeft="24dp"/>
			<CheckBox
				android:id="@+id/nav_theme_purple_checkBox"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:checked="false"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
		</android.support.constraint.ConstraintLayout>
		<android.support.constraint.ConstraintLayout
			android:id="@+id/nav_theme_orange"
			android:layout_width="match_parent"
			android:layout_height="64dp"
			android:paddingHorizontal="16dp"
			app:layout_constraintTop_toBottomOf="@id/nav_theme_purple">
			<ImageView
				android:id="@+id/nav_theme_orange_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/nav_theme_orange_icon"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="parent" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/nav_theme_orange"
				android:textSize="20sp"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:fontFamily="@font/notosans_regular"
				android:includeFontPadding="false"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toRightOf="@id/nav_theme_orange_icon"
				android:layout_marginLeft="24dp"/>
			<CheckBox
				android:id="@+id/nav_theme_orange_checkBox"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:checked="false"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
		</android.support.constraint.ConstraintLayout>
		<android.support.constraint.ConstraintLayout
			android:id="@+id/nav_theme_green"
			android:layout_width="match_parent"
			android:layout_height="64dp"
			android:paddingHorizontal="16dp"
			app:layout_constraintTop_toBottomOf="@id/nav_theme_orange">
			<ImageView
				android:id="@+id/nav_theme_green_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/nav_theme_green_icon"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="parent" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/nav_theme_green"
				android:textSize="20sp"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:fontFamily="@font/notosans_regular"
				android:includeFontPadding="false"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toRightOf="@id/nav_theme_green_icon"
				android:layout_marginLeft="24dp"/>
			<CheckBox
				android:id="@+id/nav_theme_green_checkBox"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:checked="false"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
		</android.support.constraint.ConstraintLayout>
	</android.support.constraint.ConstraintLayout>
	
</android.support.constraint.ConstraintLayout>